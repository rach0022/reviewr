<?xml version='1.0' encoding='utf-8'?>
<widget id="com.algonquinlive.rach0022.reviewr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rach0022-Reviewr</name>
    <description>
        REVIEWR, The new hip and cool way to take pictures. Ever thought your photo library was dull and bland, well now you can save pictures with reviews all inside REVIEWR
    </description>
    <author email="rach0022@algonquinlive.com" href="http://rach0022.github.io">
        Ravi Rachamalla
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- to make sure none of the pictures made for this app are backed up to icloud  -->
        <preference name="BackupWebStorage" value="none" />
        <edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
            <string> To Take Pictures for ReviewR App </string>
        </edit-config>
        <!-- start of splashscreen definitions  -->
        <splash src="res/screen/ios/reviewr_splash-default.png" width="320" height="480"/>
        <splash src="res/screen/ios/reviewr_splash-default@2x.png" width="640" height="960"/>
        <splash src="res/screen/ios/reviewr_splash-default@3x.png" width="960" height="1440"/>
        <splash src="res/screen/ios/reviewr_splash-default-portrait.png" width="768" height="1024"/>
        <splash src="res/screen/ios/reviewr_splash-default-portrait@2x.png" width="1536" height="2048"/>
        <splash src="res/screen/ios/reviewr_splash-default-portrait@3x.png" width="2304" height="3072"/>
        <splash src="res/screen/ios/reviewr_splash-default-landscape.png" width="1024" height="768"/>
        <splash src="res/screen/ios/reviewr_splash-default-landscape@2x.png" width="2048" height="1536"/>
        <splash src="res/screen/ios/reviewr_splash-default-landscape@3x.png" width="3072" height="2304"/>

        <splash src="res/screen/ios/reviewr_splash-default-667h.png" width="750" height="1334"/>
        <splash src="res/screen/ios/reviewr_splash-default-667h@2x.png" width="1500" height="2668"/>
        <splash src="res/screen/ios/reviewr_splash-default-667h@3x.png" width="2250" height="4002"/>
        <splash src="res/screen/ios/reviewr_splash-default-667h-landscape.png" width="1334" height="750"/>
        <splash src="res/screen/ios/reviewr_splash-default-667h-landscape@2x.png" width="2668" height="1500"/>
        <splash src="res/screen/ios/reviewr_splash-default-667h-landscape@3x.png" width="4002" height="2250"/>

        <splash src="res/screen/ios/reviewr_splash-default-736h.png" width="1242" height="2208"/>
        <splash src="res/screen/ios/reviewr_splash-default-736h@2x.png" width="2484" height="2668"/>
        <splash src="res/screen/ios/reviewr_splash-default-736h@3x.png" width="3726" height="6624"/>
        <splash src="res/screen/ios/reviewr_splash-default-736h-landscape.png" width="2208" height="1242"/>
        <splash src="res/screen/ios/reviewr_splash-default-736h-landscape@2x.png" width="2668" height="2484"/>
        <splash src="res/screen/ios/reviewr_splash-default-736h-landscape@3x.png" width="6624" height="3726"/>
        
        <!-- start of icon definitions  -->
        <icon src="res/icon/ios/reviewr-icon-40.png" width="40" height="40" />
        <icon src="res/icon/ios/reviewr-icon-40@2x.png" width="80" height="80" />
        <icon src="res/icon/ios/reviewr-icon-60.png" width="60" height="60" />
        <icon src="res/icon/ios/reviewr-icon-60@2x.png" width="120" height="120" />
        <icon src="res/icon/ios/reviewr-icon-72.png" width="72" height="72" />
        <icon src="res/icon/ios/reviewr-icon-72@2x.png" width="144" height="144" />
        <icon src="res/icon/ios/reviewr-icon-80.png" width="80" height="80" />
        <icon src="res/icon/ios/reviewr-icon-80@2x.png" width="160" height="160" />

        <!-- preferences for splashscreen  -->
        <preference name="SplashScreen" value="splash" />
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="SplashScreenDelay" value="5000" />
    </platform>
    
    <plugin name="cordova-plugin-camera" spec="^4.1.0">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="To take Pictures for your ReviewR entries" />
        <!-- NSCAMERAUSAGEDESCRIPTION -->
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="To take picture for ReviewR" />
    </plugin>
</widget>
