<?xml version='1.0' encoding='utf-8'?>
<widget id="com.algonquinlive.rach0022.reviewr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rach0022-Reviewr</name>
    <description>
        REVIEWR, The new hip and cool way to take pictures. Ever thought your photo library was dull and bland, well now you can save pictures with reviews all inside REVIEWR
    </description>
    <author email="rach0022@algonquinlive.com" href="http://rach0022.github.io">
        Ravi Rachamalla
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- to make sure none of the pictures made for this app are backed up to icloud  -->
        <preference name="BackupWebStorage" value="none" />
        <edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
            <string> To Take Pictures for ReviewR App </string>
        </edit-config>
    </platform>
    <plugin name="cordova-plugin-camera" spec="^4.1.0">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="To take Pictures for your ReviewR entries" />
        <!-- NSCAMERAUSAGEDESCRIPTION -->
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="To take picture for ReviewR" />
    </plugin>
</widget>
